<h2>cart</h2>
<%= form_for :order, url: orders_path do |f| %>
	<div class="form-group">
          <%= f.label :order, class: "control-label" %>
          <%= f.text_field :order, id: "orders_input", class: "form-control" %>
    </div>
    <div class="form-group">
          <%= f.label :first_name, class: "control-label" %>
          <%= f.text_field :first_name, :value => current_user.first_name, class: "form-control" %>
    </div>
    <div class="form-group">
          <%= f.label :last_name, class: "control-label" %>
          <%= f.text_field :last_name, :value => current_user.last_name, class: "form-control" %>
    </div>
    <div class="form-group">
          <%= f.label :phone, class: "control-label" %>
          <%= f.text_field :phone, :value => current_user.phone, class: "form-control" %>
    </div>
    <div class="form-group">
          <%= f.label :adress, class: "control-label" %>
          <%= f.select :adress, options_for_select(["office", "#{current_user.adress} +5$"]), {}, {class: "form-control"} %>
    </div>

    <%= f.submit "Order", class: "btn btn btn-default" %>
<% end %>
