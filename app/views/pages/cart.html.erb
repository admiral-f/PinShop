<div class="container">
	<div class="row">
	<div class="col-xs-2"></div>
		<div class="col-md-8 col-sm-8 col-xs-12">
			<h2>cart</h2>
			<table id="OrdersTable" class="table table-condensed">
			</table>
			<%= form_for :order, url: orders_path do |f| %>
				<div class="form-group">
			          <%= f.label :order, class: "control-label" %>
			          <%= f.text_field :order, id: "orders_input", class: "form-control" %>
			    </div>
			    <div class="form-group">
			          <%= f.label :order_price, class: "control-label" %>
			          <%= f.text_field :order_price, id: "order_price", class: "form-control" %>
			    </div>
			    <div class="form-group">
			          <%= f.label :first_name, class: "control-label" %>
			          <%= f.text_field :first_name, :value => current_user.first_name, class: "form-control" %>
			    </div>
			    <div class="form-group">
			          <%= f.label :last_name, class: "control-label" %>
			          <%= f.text_field :last_name, :value => current_user.last_name, class: "form-control" %>
			    </div>
			    <div class="form-group">
			          <%= f.label :phone, class: "control-label" %>
			          <%= f.text_field :phone, :value => current_user.phone, class: "form-control" %>
			    </div>
			    <div class="form-group">
			          <%= f.label :adress, class: "control-label" %>
			          <%= f.select :adress, options_for_select(["office", "#{current_user.adress} +5$"]), {}, {class: "form-control"} %>
			    </div>

			    <%= f.submit "Order", class: "btn btn btn-default" %>
			<% end %>
		</div>
	</div>
</div>
<script type="text/javascript">
  $(function(){
    update_orders_link();
    update_orders_input();
    add_order_table();
    update_order_price_input()
  });
</script>