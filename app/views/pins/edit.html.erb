<div class="container">
	<div class="row">
	<div class="col-xs-2"></div>
		<div class="col-md-8 col-sm-8 col-xs-12">
			<h4>Edit <%=@pin.label %></h4>
			<%= form_for :pin, url: pin_path(@pin), method: :put do |f| %>
				<% if @pin && @pin.errors.any? %>
					<p>
					<% @error=@pin.errors.full_messages.first %>
					</p>
				<% end %>

			   	<div class="form-group">
					<%= f.label :label, class: "control-label" %> </br>
					<%= f.text_field :label, class: "form-control" %>		
				</div>
				<div class="form-group">
					<%= f.label :price, class: "control-label" %> </br>
					<%= f.text_field :price, class: "form-control" %>		
				</div>
				<div class="form-group">
					<%= f.label :material, class: "control-label" %> </br>
					<%= f.text_field :material, class: "form-control" %>		
				</div>
				<div class="form-group">
				<%= f.label :category_id, class: "control-label" %>
				<%= f.collection_select :category_id, Category.all, :id, :title, {prompt: "Select a category"}, {class: "form-control"} %>
				</div>
				<div class="form-group">
				<%= f.label :description, class: "control-label" %> 
				<%= f.text_area :description, class: "form-control" %>		
				</div>
				</br>
				<%= f.file_field :image %>
				</br>
				<p>
				<%= f.check_box :is_best_offer %> 
				<%= f.label :is_best_offer, class: "control-label" %></p>
				</br>
				<%= f.submit "Submit", class: "btn btn-default" %>
			<% end %>
			</br>
			<%= link_to 'Destroy', pin_path(@pin), method: :delete, data: { confirm: 'Are you sure?' } %>
		</div>
	</div>
</div>