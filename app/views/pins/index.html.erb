<div class="container">
	<div class="row">
	<div class="col-xs-2">
    <div class="row">
      <h2><p class="text-center">Category</p></h2>
    </div>
    <table class="table table-hover">
    <tbody>
    <tr><td>
        <%= link_to "All", pins_path %>
    </td></tr>
    <% @categories.each do |category| %>
      <tr><td>
        <%= link_to "#{category.title}", category %>
      </td></tr>
    <% end %>
    </tbody>
    </table>  
  </div>
		<div class="col-md-8 col-sm-8 col-xs-12">
			<h2><p class="text-center">Our pins</p></h2>
			<div class="row">
				<% @pin.each do |pin| %>
					<div class="col-sm-6 col-md-6">
    					<div class="thumbnail">
      						<%= link_to image_tag(pin.image.url(:medium)),pin_path(pin), class: "center-block img-thumbnail" %>
      						<div class="caption">
        						<h3><p class="text-center"><%= link_to pin.label,pin_path(pin) %></p></h3>
        						<p><b>Price: <%=pin.price %> $</b></p>
        						</br>
        						<p>Material: <%=pin.material %></p>
                    </br>
        						<p><a href="#" class="btn btn-default btn-sm" role="button" onclick="add_to_cart(<%=pin.id%>, '<%= pin.label %>', <%= pin.price %>)">Add to Cart (<%= pin.price %>$)</a></p>
                  </div>
              <% if user_signed_in? %>
                <% if current_user.username=='admin' %>
                   <%= link_to 'edit',edit_pin_path(pin) %>
                <% end %>
              <% end %>
    					</div>
  					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>